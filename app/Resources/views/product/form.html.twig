{% extends '::base.html.twig' %}

{% block body %}
    <div>
        <form method="post" action="{{ action }}" novalidate="novalidate"><!-- para evitar la validacion html5 -->
            <div>
                {{ dump (form.vars.value) }}

                <ul>
                    <!-- para mostrar los errores del formulario -->
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div>{{ form_errors(form.name) }}{{ form_label(form.name) }}: {{ form_widget(form.name) }}</div>
            <div>{{ form_label(form.description) }}: {{ form_widget(form.description) }}</div>
            <div>{{ form_label(form.price) }}: {{ form_widget(form.price) }}</div>
            {{ form_rest(form) }}
            <div><input type="submit" value="AÃ±adir"></div>


        </form>
    </div>

{% endblock %}