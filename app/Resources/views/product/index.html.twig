{% extends '::base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body%}
    <table>
        {% for prod in product %}
            <tr>
                <td>{{ prod.id }} </td>
                <td>{{ prod.name }} </td>
                <td>{{ prod.description }} </td>
                <td>{{ prod.price }} â‚¬ </td>
                <td>{{ prod.createdAt|date("d/m/Y H:i:s") }} </td>
                <td>{{ prod.updatedAt|date("d/m/Y H:i:s") }} </td>
                <td><a href="{{ path('app_product_update', {'id': prod.id}) }}"> Actualizar </a></td>
                <td><a href="{{ path('app_product_remove', {'id': prod.id}) }}"> Borrar </a> </td>
            </tr>

        {% endfor %}
        <tr>

            <td><a href="{{ path('app_product_insert') }}"> Nuevo Producto </a></td>
        </tr>
    </table><br>

{% endblock %}

